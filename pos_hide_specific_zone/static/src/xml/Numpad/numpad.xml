<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="Numpad" owl="1">
        <xpath expr="//button[hasclass('numpad-backspace')]" position="replace">
            <button t-if="env and env.pos and env.pos.visible_backspece_btn" class="input-button numpad-backspace" t-on-click="() => this.sendInput('Blackspace')">
                <img style="pointer-events: none;" src="/point_of_sale/static/src/img/backspace.png" width="24" heigth="21" alt="Backspace"/> 
            </button>
        </xpath>
    </t>
</templates>