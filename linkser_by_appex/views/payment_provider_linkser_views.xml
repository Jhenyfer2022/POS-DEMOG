<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inheriting providers to add linkser provider fields -->
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">payment.provider.view.form.inherit.advanced.payment.linkser</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'linkser'">
                    <field name="linkser_merchant"
                           string="Merchant ID"
                           required="code == 'linkser' and state != 'disabled'"/>
                    <field name="linkser_key"
                           string="key" password="1"
                           required="code == 'linkser' and state != 'disabled'"/>
                    <field name="linkser_secret_key"
                           string="Secret key" password="1"
                           required="code == 'linkser' and state != 'disabled'"/>
                </group>
            </group>
        </field>
    </record>
</odoo>